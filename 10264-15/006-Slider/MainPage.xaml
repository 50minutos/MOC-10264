<UserControl x:Class="_006_Slider.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <Slider Name="Tamanho" Value="400" VerticalAlignment="Top" HorizontalAlignment="center" Width="400" Minimum="1" Maximum="600"></Slider>
        <Image Source="imagem.jpg" Width="{Binding ElementName=Tamanho, Path=Value}"  HorizontalAlignment="center" VerticalAlignment="center"></Image>
    </Grid>
</UserControl>
